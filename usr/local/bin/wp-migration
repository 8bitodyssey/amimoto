#!/bin/sh
if [ $# -ne 0 ]; then
  WPDIR=$2
  SITENAME=$1
else
  while :
  do
    echo -n "please input site name: "
    read SITENAME
    if [ "$SITENAME" != "" ]; then
      break;
    fi
  done
fi

if [ -f /var/www/vhosts/$SITENAME/wp-config.php ]; then
  WPDIR=/var/www/vhosts/$SITENAME/
fi

echo "migration start..."
echo ""

cd /tmp/
/usr/bin/git clone git://github.com/megumiteam/amimoto.git
if [ -f /tmp/amimoto/migration.php ]; then
  /bin/php /tmp/amimoto/migration.php $WPDIR $SITENAME
fi
/bin/rm -Rf /tmp/amimoto

echo ""
echo "...done"
